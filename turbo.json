{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"@kabbalistix/web#build": {
			"env": [
				"NODE_ENV",
				"REDIS_URL",
				"TIMEOUT_SECONDS",
				"RATE_LIMIT_WINDOW_SECONDS",
				"RATE_LIMIT_MAX_REQUESTS",
				"NEXT_PUBLIC_APP_URL",
				"SKIP_VALIDATION"
			],
			"dependsOn": ["@kabbalistix/cli#build"],
			"outputs": ["target/release/kabbalistix"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"interruptible": true,
			"inputs": ["$TURBO_DEFAULT$", "src/**/*.ts", "src/**/*.tsx"]
		}
	}
}
